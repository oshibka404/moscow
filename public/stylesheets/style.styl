html, body
  padding 0
  margin 0
  height 100%
  
body
  background-image url('/images/map.png')
  background-size cover
  background-position center center
  background-repeat no-repeat

.histogram
  position fixed
  right 0
  top 10%
  width 200px
  height 100px
  
  background-color #000
  opacity .8

.origin
  position absolute
  width 0
  height 0
  left 50%
  top 50%